<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tomdrever.timetable">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_main_activity_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NewTimetableActivity"
            android:label="@string/app_new_timetable_activity_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".EditTimetableActivity"
            android:label="@string/app_edit_timetable_activity_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>
</manifest>
