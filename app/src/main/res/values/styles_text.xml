<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="BasicTextView">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textAlignment">center</item>
	</style>

	<style name="TimetableCardDetailsTextView" parent="BasicTextView">
		<item name="android:textColor">@color/primaryLight</item>
		<item name="android:fontFamily">sans-serif-light</item>
	</style>

	<style name="TimetableCardTitleTextView" parent="BasicTextView">
		<item name="android:textSize">22sp</item>
		<item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="EmptyListTextView">
		<item name="android:textAlignment">center</item>
		<item name="android:textColor">@color/primaryLight</item>
		<item name="android:textSize">24sp</item>
		<item name="android:fontFamily">sans-serif-thin</item>
	</style>

	<style name="WhiteTitleTextView">
		<item name="android:padding">24dp</item>
		<item name="android:textSize">28sp</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="BasicTextInputLayout">
		<item name="android:layout_height">56dp</item>
		<item name="android:gravity">bottom</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:clipToPadding">false</item>
	</style>

	<style name="BasicEditText">
		<item name="android:layout_height">48dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="CapsEditText" parent="BasicEditText">
		<item name="android:inputType">textCapSentences</item>
	</style>

	<style name="DialogHeadingTextView" parent="BasicTextView">
		<item name="android:padding">8dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/grey</item>
	</style>

	<style name="SettingsHeadingTextView" parent="BasicTextView">
		<item name="android:textColor">@color/accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
	</style>

	<style name="DialogEditText">
		<item name="android:padding">8dp</item>
		<item name="android:textColorHint">@color/lightGrey</item>
	</style>

</resources>