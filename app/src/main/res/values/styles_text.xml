<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="BasicTextView">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textAlignment">center</item>
	</style>

	<style name="TimetableCardDetailsTextView" parent="BasicTextView">
		<item name="android:textColor">@color/grey2</item>
		<item name="android:fontFamily">sans-serif-light</item>
	</style>

	<style name="TimetableCardTitleTextView" parent="BasicTextView">
		<item name="android:textSize">22sp</item>
		<item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="EmptyListTextView">
		<item name="android:textAlignment">center</item>
		<item name="android:textColor">@color/grey2</item>
		<item name="android:textSize">24sp</item>
		<item name="android:fontFamily">sans-serif-thin</item>
	</style>

	<style name="BasicEditText">
		<item name="android:layout_height">48dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="CapsEditText" parent="BasicEditText">
		<item name="android:inputType">textCapSentences</item>
	</style>

	<style name="SettingsHeadingTextView" parent="BasicTextView">
		<item name="android:textColor">@color/lime</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
	</style>

	<style name="SmallSettingsHeadingTextView" parent="SettingsHeadingTextView">
		<item name="android:padding">4dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">normal</item>
	</style>

    <style name="PeriodNameTitleTextView" parent="BasicTextView">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

	<style name="TimeTextView" parent="BasicTextView">
		<item name="android:textColor">@color/grey2</item>
		<item name="android:textSize">48sp</item>
		<item name="android:textAlignment">center</item>
	</style>

	<style name="SmallTimeTextView" parent="TimeTextView">
		<item name="android:paddingLeft">4dp</item>
		<item name="android:textSize">24sp</item>
	</style>
    
    <style name="ViewPeriodFragmentTimeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/grey3</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>