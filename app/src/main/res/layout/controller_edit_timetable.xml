<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="8dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_timetable_details_heading"
                style="@style/SettingsHeadingTextView"
                />

            <!-- Name edit text -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:errorEnabled="true"
                >

                <EditText
                    android:id="@+id/edit_timetable_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionGo"
                    android:inputType="text"
                    android:maxLines="1"
                    style="@style/BasicEditText"
                    />

            </android.support.design.widget.TextInputLayout>

            <!-- Description edit text -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/description_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:errorEnabled="true"
                >

                <EditText
                    android:id="@+id/edit_timetable_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionGo"
                    android:inputType="text"
                    android:maxLines="1"
                    style="@style/BasicEditText"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="8dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_timetable_days_heading"
                style="@style/SettingsHeadingTextView"
            />

            <!--
            TODO - add "no days" TextView
            <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:text="@string/empty_timetable"
				android:visibility="@{timetable.days.size() > 0 ? View.GONE : View.VISIBLE}"
				style="@style/EmptyListTextView"
		    />
            -->

            <GridView
                android:id="@+id/edit_timetable_days"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:horizontalSpacing="4dp"
                android:verticalSpacing="4dp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:gravity="center"
            />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

