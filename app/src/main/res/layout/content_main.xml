<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tomdrever.timetable.MainActivity"
    tools:showIn="@layout/activity_main">
    <data>
        <import type="android.view.View"/>
        <variable name="timetablesadapter" type="tomdrever.timetable.CustomRecyclerViewAdapter"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_timetables"
            android:text="@{timetablesadapter.getItemCount() + 1}"
            android:textColor="@color/colorFadedLight"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</layout>

