<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/period_card_base_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <!-- The colour indicator and timeline line should go here -->
    <ImageView
        android:id="@+id/period_timeline_indicator"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_gravity="center"
        android:padding="12dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/period_name_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="4dp"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textSize="22sp"
            style="@style/BasicTextView"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/period_start_text"
                android:text="@string/period_default_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/grey3"
                style="@style/BasicTextView"
                />

            <TextView
                android:text="@string/period_time_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/grey3"
                style="@style/BasicTextView"
                />

            <TextView
                android:id="@+id/period_end_text"
                android:text="@string/period_default_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/grey3"
                style="@style/BasicTextView"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>