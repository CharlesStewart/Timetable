<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/timetable_card_base_view"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:clickable="true"
             android:background="@drawable/ripple"
             android:paddingTop="4dp"
             android:paddingBottom="4dp"
             android:gravity="center"
>

	<ImageView
			android:id="@+id/timetable_card_drag_handle"
			style="@style/DragHandleImageView"
	/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
	>

		<!--TITLE-->
		<TextView
				android:id="@+id/timetable_card_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center|top"
				style="@style/TimetableCardTitleTextView"
		/>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="4dp"
				android:gravity="center"
				android:orientation="horizontal"
		>

			<!--DESCRIPTION-->
			<TextView
					android:id="@+id/timetable_card_description"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_margin="2dp"
					style="@style/TimetableCardDetailsTextView"
			/>

		</LinearLayout>

	</LinearLayout>

</FrameLayout>
